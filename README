use strict;
use CGI::RSS;

my $rss = new CGI::RSS;

print $rss->header;
print $rss->begin_rss(title=>"My Feed!", link=>"http://localhost/directory");
while( my $h = $sth->fetchrow_hashref ) {
    print $rss->item(
        $rss->title       ( $h->{title} ),
        $rss->link        ( $h->{link}  ),
        $rss->description ( $h->{desc}  ),
        $rss->date        ( $h->{date}  ),
    );
}
print $rss->finish_rss;
